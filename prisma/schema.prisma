datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String  @id
  email         String  @unique
  username      String  @unique
  walletAddress String? @unique
}

model Merchant {
  id            String @id @default(uuid())
  apiKey        String @unique
  businessName  String @unique
  walletAddress String @unique
}
